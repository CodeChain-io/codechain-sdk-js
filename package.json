{
  "name": "codechain-sdk",
  "version": "0.1.0",
  "description": "A JavaScript SDK for CodeChain",
  "scripts": {
    "lint": "tslint -c tslint.json \"src/**/*.ts\"",
    "build": "tsc",
    "test": "npm run lint && jest --env node",
    "test-int": "jest --env node --roots integration_tests",
    "docs": "typedoc --out docs",
    "docs-dev": "nodemon -e ts --watch src ./node_modules/.bin/typedoc --out docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kodebox-io/codechain-sdk-js.git"
  },
  "author": "CodeChain Team <codechain@kodebox.io>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kodebox-io/codechain-sdk-js/issues"
  },
  "homepage": "https://github.com/kodebox-io/codechain-sdk-js#readme",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "dependencies": {
    "bignumber.js": "^6.0.0",
    "blakejs": "^1.1.0",
    "elliptic": "^6.4.0",
    "jayson": "^2.0.5",
    "lodash": "^4.17.10",
    "ripemd160": "^2.0.2",
    "rlp": "^2.0.0"
  },
  "devDependencies": {
    "@types/bignumber.js": "^5.0.0",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.108",
    "@types/node": "^9.6.6",
    "jest": "^22.4.3",
    "nodemon": "^1.17.5",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.3"
  }
}
