root = true

[*]
end_of_line = lf
charset = utf-8

[*.{js,json,yml}]
indent_style = space
indent_size = 2

[{examples,integration_tests,src,test}/**.{ts,tsx,json,js,jsx}]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

# npm inserts a final newline.
[package.json]
insert_final_newline = true
trim_trailing_whitespace = false

